<window type="dialog">
    <defaultcontrol>2</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        <!-- Background Texture -->
        <control type="image">
            <texture>$INFO[Window().Property(texture.white)]</texture>
            <colordiffuse>FF000000</colordiffuse>
        </control>
        <!-- Background -->
        <control type="image">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Window().Property(item.art.fanart)]</texture>
        </control>

        <control type="image">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Window().Property(texture.white)]</texture>
            <colordiffuse>CC000000</colordiffuse>
        </control>


        <!--&lt;!&ndash; Additional Background Difuse &ndash;&gt;-->
        <!--<control type="image">-->
            <!--<texture>$INFO[Window().Property(texture.white)]</texture>-->
            <!--<colordiffuse>8936353b</colordiffuse>-->
        <!--</control>-->

        <!-- Side Info -->
        <control type="group">
            <top>120</top>
            <left>1400</left>
            <control type="label">
                <top>-900</top>
                <width>400</width>
                <font>font12</font>
                <textcolor>AAFFFFFF</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <visible>!String.IsEmpty(Window().Property(item.info.season))</visible>
                <label>Season: [COLOR $INFO[Window().Property(settings.color)]]$INFO[Window().Property(item.info.season)] [/COLOR] | Episode: [COLOR $INFO[Window().Property(settings.color)]]$INFO[Window().Property(item.info.episode)][/COLOR]</label>
            </control>
            <control type="image">
                <width>400</width>
                <height>600</height>
                <top>50</top>
                <texture>$INFO[Window().Property(item.art.poster)]</texture>
            </control>

            <control type="group">
                <top>420</top>
                <control type="label">
                    <top>20</top>
                    <width>400</width>
                    <font>font14</font>
                    <textcolor>AAFFFFFF</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>[COLOR $INFO[Window().Property(settings.color)]]$INFO[Window().Property(item.info.title)] [/COLOR]</label>
                </control>
                <control type="label">
                    <top>150</top>
                    <width>400</width>
                    <font>font12</font>
                    <textcolor>AAFFFFFF</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <visible>String.IsEmpty(Window().Property(item.info.season))</visible>
                    <label>Year: [COLOR $INFO[Window().Property(settings.color)]]$INFO[Window().Property(item.info.year)] [/COLOR] | Rating: [COLOR $INFO[Window().Property(settings.color)]]$INFO[Window().Property(item.info.rating)][/COLOR]
                    </label>
                </control>
                <control type="label">
                    <top>120</top>
                    <width>400</width>
                    <font>font12</font>
                    <textcolor>AAFFFFFF</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <visible>!String.IsEmpty(Window().Property(item.info.season))</visible>
                    <label>Aired: [COLOR $INFO[Window().Property(settings.color)]]$INFO[Window().Property(item.info.aired)] [/COLOR]</label>
                </control>

                <control type="textbox">
                    <wrapmultiline>true</wrapmultiline>
                    <top>360</top>
                    <left>-70</left>
                    <height min="20" max="130">auto</height>
                    <width>550</width>
                    <font>font12</font>
                    <textcolor>AAFFFFFF</textcolor>
                    <align>center</align>
                    <label>$INFO[Window().Property(item.info.plot)]</label>
                </control>
            </control>

        </control>

        <!-- Top Logo/picture  -->
        <control type="image" id="1001">
            <top>-900</top>
            <left>836</left>
            <width>248</width>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[Window().Property(item.art.clearlogo)]</texture>
        </control>

        <!-- Scrollbar  -->
        <control type="scrollbar" id="17">
            <left>1250</left>
            <top>150</top>
            <width>20</width>
            <height>838</height>
            <visible>true</visible>
            <texturesliderbackground colordiffuse="9900000" border="4">special://home/addons/plugin.video.seren/resources/skins/media/white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="4dcccccc" border="4">special://home/addons/plugin.video.seren/resources/skins/media/scrollv.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="99ffffff" border="4">special://home/addons/plugin.video.seren/resources/skins/media/scrollv.png</texturesliderbarfocus>
            <pulseonselect></pulseonselect>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <onleft>1000</onleft>
        </control>

