<window type="dialog">
    <defaultcontrol>2</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
    
        <!-- Background -->
        <control type="group">
            <include condition="Skin.HasSetting(global.showvideo)">Global_Videowindow</include>
            <include condition="!Skin.HasSetting(global.showvideo)">Global_Videowindow_Hidden</include>
            <include condition="Skin.HasSetting(global.showvisualisation)">Global_Visualisation</include>
            
            <control type="group">
                <visible>$EXP[Exp_GlobalBackground]</visible>
                
                <!-- Fanart -->
                <control type="group">
                
                    <!-- Fallback -->
                    <control type="group">
                        <visible>Skin.HasSetting(NoFanart) | String.IsEmpty(Window().Property(item.art.fanart)</visible>
                        
                        <control type="image">
                            <visible>!String.IsEmpty(Skin.String(fanart.fallback))</visible>
                            <texture background="true">$INFO[Skin.String(fanart.fallback)]</texture>
                        </control>
                        
                        <control type="image">
                            <visible>String.IsEmpty(Skin.String(fanart.fallback))</visible>
                            <texture background="true">common/null.png</texture>
                        </control>
                    </control>
                
                    <!-- Static Fanart -->
                    <control type="image">
                        <visible>!String.IsEmpty(Window().Property(item.art.fanart) + ![Skin.HasSetting(SkinHelper.EnableExtraFanart) + System.HasAddon(script.artwork.helper)] + !Skin.HasSetting(NoFanart)</visible>
                        <texture background="true">$INFO[Window().Property(item.art.fanart)]</texture>
                    </control>
                    
                    <!-- Extra Fanart -->
                    <control type="group">
                        <visible>Skin.HasSetting(SkinHelper.EnableExtraFanart) + System.HasAddon(script.artwork.helper) + !Skin.HasSetting(NoFanart)</visible>
                    
                        <control type="fadelabel" id="1010">
                            <left>-2160</left>
                            <width>1</width>
                            <height>1</height>
                            <info>Window().Property(item.art.fanart)</info>
                            <info>Window().Property(item.art.fanart1)</info>
                            <info>Window().Property(item.art.fanart2)</info>
                            <info>Window().Property(item.art.fanart3)</info>
                            <info>Window().Property(item.art.fanart4)</info>
                            <info>Window().Property(item.art.fanart5)</info>
                            <info>Window().Property(item.art.fanart6)</info>
                            <info>Window().Property(item.art.fanart7)</info>
                            <info>Window().Property(item.art.fanart8)</info>
                            <info>Window().Property(item.art.fanart9)</info>
                            <info>Window().Property(item.art.fanart10)</info>
                            <info>Window().Property(item.art.fanart11)</info>
                            <info>Window().Property(item.art.fanart12)</info>
                            <info>Window().Property(item.art.fanart13)</info>
                            <info>Window().Property(item.art.fanart14)</info>
                            <info>Window().Property(item.art.fanart15)</info>
                            <info>Window().Property(item.art.fanart16)</info>
                            <info>Window().Property(item.art.fanart17)</info>
                            <info>Window().Property(item.art.fanart18)</info>
                            <info>Window().Property(item.art.fanart19)</info>
                            <info>Window().Property(item.art.fanart20)</info>
                            <randomize>true</randomize>
                            <include>Defs_PauseAtEnd</include>
                            <scroll>false</scroll>
                            <scrollout>false</scrollout>
                            <resetonlabelchange>true</resetonlabelchange>
                        </control>
                        
                        <control type="multiimage">
                            <fadetime>600</fadetime>
                            <aspectratio>scale</aspectratio>
                            <include>Defs_TimePerImage</include>
                            <imagepath background="true">$INFO[Control.GetLabel(1010)]</imagepath>
                        </control>
                    </control>
                </control>
                
                <!-- Shaded Overlay -->
                <control type="image">
                    <texture colordiffuse="main_bg_70">common/bg.jpg</texture>
                </control>
            </control>
        </control>
        
        <!-- Top Header  -->
        <control type="group">
            
            <!-- Clearlogo -->
            <control type="image" id="1001">
                <centerleft>50%</centerleft>
                <width>248</width>
                <top>-900</top>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window().Property(item.art.clearlogo)]</texture>
                <visible>Skin.HasSetting(EnableClearlogo)</visible>
            </control>
            
            <!-- Movie Fallback Label -->
            <control type="label">
                <centerleft>50%</centerleft>
                <aligny>center</aligny>
                <align>center</align>
                <top>30</top>
                <height>120</height>
                <font>font_byline</font>
                <textcolor>main_fg_70</textcolor>
                <label>$INFO[Window().Property(item.info.title)]</label>
                <visible>[[!Skin.HasSetting(EnableClearlogo) + !Skin.HasSetting(DisableCenter)] | [Skin.HasSetting(EnableClearlogo) + [String.IsEmpty(Window().Property(item.art.clearlogo)) | String.IsEqual(Window().Property(item.art.clearlogo), None)]]] + String.IsEmpty(Window().Property(item.info.season))</visible>
            </control>
            
            <!-- Episode Fallback Label -->
            <control type="label">
                <centerleft>50%</centerleft>
                <aligny>center</aligny>
                <align>center</align>
                <top>30</top>
                <height>120</height>
                <font>font_byline</font>
                <textcolor>main_fg_70</textcolor>
                <label>$INFO[Window().Property(item.info.tvshowtitle)]</label>
                <visible>[[!Skin.HasSetting(EnableClearlogo) + !Skin.HasSetting(DisableCenter)] | [Skin.HasSetting(EnableClearlogo) + [String.IsEmpty(Window().Property(item.art.clearlogo)) | String.IsEqual(Window().Property(item.art.clearlogo), None)]]] + !String.IsEmpty(Window().Property(item.info.season))</visible>
            </control>
        </control>

        <!-- Notification -->
        <control type="label">
            <font>font_info_buttons</font>
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>main_fg_100</textcolor>
            <visible>String.IsEqual(Window().Property(process_started),false)</visible>
            <label>$INFO[Window().Property(notification_text)]</label>
        </control>
        
        <control type="group">
            <left>804</left>
            <visible>String.IsEqual(Window().Property(process_started),true)</visible>

            <!-- Progress -->
            <control type="group">     
                <control type="image">
                    <centertop>50%</centertop>
                    <left>0</left>
                    <width>12</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/left.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),10)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>0</left>
                    <width>12</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/left.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),10)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>12</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),20)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>12</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),20)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>48</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),30)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>48</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),30)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>84</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),40)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>84</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),40)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>120</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),50)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>120</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),50)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>156</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),60)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>156</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),60)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>192</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),70)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>192</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),70)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>228</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),80)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>228</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),80)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>264</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/mid.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),90)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>264</left>
                    <width>36</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/mid.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),90)</visible>
                </control>

                <control type="image">
                    <centertop>50%</centertop>
                    <left>300</left>
                    <width>12</width>
                    <height>12</height>
                    <texture colordiffuse="main_fg_30">scrollbar/right.png</texture>
                    <visible>Integer.IsLess(Window().Property(progress),100)</visible>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <left>300</left>
                    <width>12</width>
                    <height>12</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">scrollbar/right.png</texture>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(progress),100)</visible>
                </control>
            </control>

            <!-- Information -->
            <control type="group">
                <centerleft>50%</centerleft>
                <left>-800</left>
                <width>1920</width>
                <align>center</align>
                
                <!-- Stream Counts -->
                <control type="label">
                    <align>center</align>
                    <top>60</top>
                    <font>font_info_buttons</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>Torrents: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(total_torrents)][/COLOR] | Cached: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(cached_torrents)][/COLOR] | Hosters: [COLOR$VAR[ColorHighlight]]$INFO[Window().Property(hosters_sources)][/COLOR] | Cloud Files: [COLOR$VAR[ColorHighlight]]$INFO[Window().Property(cloud_sources)][/COLOR]</label>
                </control>

                <!-- Stream Resolutions -->
                <control type="label">
                    <align>center</align>
                    <top>124</top>
                    <font>font_info_buttons</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>4k: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(4k_sources)][/COLOR] | 1080p: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(1080p_sources)][/COLOR] | 720p: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(720p_sources)][/COLOR] | SD: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(sd_sources)][/COLOR]</label>
                </control>

                <!-- Remaining Provider Count, >10 Providers -->
                <control type="label">
                    <align>center</align>
                    <top>188</top>
                    <font>font_info_buttons</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>Remaining Providers: $INFO[Window().Property(remaining_providers_count)]</label>
                    <visible>Integer.IsGreaterOrEqual(Window().Property(remaining_providers_count),10)</visible>
                </control>
                
                <!-- Remaining Provider Names, <10 Providers -->
                <control type="label">
                    <align>center</align>
                    <top>192</top>
                    <font>font_info_buttons</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$INFO[Window().Property(remaining_providers_list)]</label>
                    <visible>!Integer.IsGreaterOrEqual(Window().Property(remaining_providers_count),10)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>