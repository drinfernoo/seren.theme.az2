                    <font>font_byline</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$INFO[Window().Property(remaining_providers_list)]</label>
                    <visible>!Integer.IsGreaterOrEqual(Window().Property(remaining_providers_count),10)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>