<window type="dialog">
    <defaultcontrol>2</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        
        <!-- Background -->
        <control type="group">
            <include>Dimensions_Fullscreen</include>
            
            <!-- Fanart -->
            <control type="image">
                <texture background="true">$INFO[Window().Property(item.art.fanart)]</texture>
                <visible>!String.IsEmpty(Window().Property(item.art.fanart))</visible>
            </control>
            
            <!-- Fallback Background -->
            <control type="image">
                <texture background="true" colordiffuse="main_bg_100">$INFO[Window().Property(texture.white)]</texture>
                <visible>String.IsEmpty(Window().Property(item.art.fanart))</visible>
            </control>
            
            <!-- Shaded Overlay -->
            <control type="image">
                <texture colordiffuse="main_bg_70">common/bg.jpg</texture>
            </control>
        </control>
        
        <!-- Top Header  -->
        <control type="group">
            
            <!-- Clearlogo -->
            <control type="image" id="1001">
                <centerleft>50%</centerleft>
                <width>248</width>
                <top>-900</top>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window().Property(item.art.clearlogo)]</texture>
                <visible>Skin.HasSetting(EnableClearlogo)</visible>
            </control>
            
            <!-- Fallback Label -->
            <control type="label">
                <centerleft>50%</centerleft>
                <aligny>center</aligny>
                <align>center</align>
                <top>30</top>
                <height>120</height>
                <font>font_byline</font>
                <textcolor>main_fg_70</textcolor>
                <label>$INFO[Window().Property(item.info.title)]</label>
                <visible>!Skin.HasSetting(EnableClearlogo) | String.IsEqual(Window().Property(item.art.clearlogo), None) | String.IsEqual(Window().Property(item.art.clearlogo), )</visible>
            </control>
        </control>

        <control type="group">
            <left>804</left>
        
            <!-- Notification -->
            <control type="label">
                <font>font_byline</font>
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>main_fg_100</textcolor>
                <visible>String.IsEqual(Window().Property(process_started),false)</visible>
                <label>$INFO[Window().Property(notification_text)]</label>
            </control>
            
            <control type="group">
                <centerleft>50%</centerleft>
                <left>-800</left>
                <width>1920</width>
                <align>center</align>
                
                <!-- Stream Label -->
                <control type="label">
                    <centertop>50%</centertop>
                    <font>font_byline</font>
                    <align>center</align>
                    <textcolor>main_fg_100</textcolor>
                    <label>[COLOR $VAR[ColorHighlight]]$INFO[Window().Property(release_title)][/COLOR]</label>
                </control>

                <!-- Provider Info -->
                <control type="label">
                    <top>60</top>
                    <font>font_byline</font>
                    <align>center</align>
                    <textcolor>main_fg_100</textcolor>
                    <label>Provider: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(debrid_provider)][/COLOR] | Source: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(source_provider)][/COLOR]</label>
                </control>

                <!-- Stream Metadata -->
                <control type="label">
                    <top>124</top>
                    <font>font_byline</font>
                    <align>center</align>
                    <textcolor>main_fg_100</textcolor>
                    <label>Resolution: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(source_resolution)][/COLOR] | Info: [COLOR $VAR[ColorHighlight]]$INFO[Window().Property(source_info)][/COLOR]</label>
                </control>
            </control>
        </control>
    </controls>
</window>