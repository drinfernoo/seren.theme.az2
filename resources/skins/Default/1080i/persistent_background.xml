<window type="dialog">
    <defaultcontrol>2</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
    
        <!-- Background -->
        <control type="group">
            <include>Dimensions_Fullscreen</include>

            <!-- Fallback Background -->
            <control type="group">
                <control type="image">
                    <texture background="true" colordiffuse="PosterBack">common/geometric.png</texture>
                    <visible>!Skin.HasSetting(DisableGeometric)</visible>
                </control>
                
                <control type="image">
                    <texture background="true" colordiffuse="PosterBack">$INFO[Window().Property(texture.white)]</texture>
                    <visible>Skin.HasSetting(DisableGeometric)</visible>
                </control>
            </control>
            
            <!-- Fanart -->
            <control type="image">
                <texture>$INFO[Window().Property(item.art.fanart)]</texture>
                <visible>!String.IsEmpty(Window().Property(item.art.fanart))</visible>
            </control>
            
            <!-- Shaded Overlay -->
            <control type="image">
                <texture colordiffuse="main_bg_70">common/bg.jpg</texture>
            </control>
        </control>
        
        <!-- Top Header  -->
        <control type="group">
            
            <!-- Clearlogo -->
            <control type="image" id="1001">
                <centerleft>50%</centerleft>
                <width>248</width>
                <top>-900</top>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window().Property(item.art.clearlogo)]</texture>
                <visible>Skin.HasSetting(EnableClearlogo)</visible>
            </control>
            
            <!-- Movie Fallback Label -->
            <control type="label">
                <centerleft>50%</centerleft>
                <aligny>center</aligny>
                <align>center</align>
                <top>30</top>
                <height>120</height>
                <font>font_byline</font>
                <textcolor>main_fg_70</textcolor>
                <label>$INFO[Window().Property(item.info.title)]</label>
                <visible>[[!Skin.HasSetting(EnableClearlogo) + !Skin.HasSetting(DisableCenter)] | [Skin.HasSetting(EnableClearlogo) + [String.IsEmpty(Window().Property(item.art.clearlogo)) | String.IsEqual(Window().Property(item.art.clearlogo), None)]]] + String.IsEmpty(Window().Property(item.info.season))</visible>
            </control>
            
            <!-- Episode Fallback Label -->
            <control type="label">
                <centerleft>50%</centerleft>
                <aligny>center</aligny>
                <align>center</align>
                <top>30</top>
                <height>120</height>
                <font>font_byline</font>
                <textcolor>main_fg_70</textcolor>
                <label>$INFO[Window().Property(item.info.tvshowtitle)]</label>
                <visible>[[!Skin.HasSetting(EnableClearlogo) + !Skin.HasSetting(DisableCenter)] | [Skin.HasSetting(EnableClearlogo) + [String.IsEmpty(Window().Property(item.art.clearlogo)) | String.IsEqual(Window().Property(item.art.clearlogo), None)]]] + !String.IsEmpty(Window().Property(item.info.season))</visible>
            </control>
        </control>
        
        <!-- Notification -->
        <control type="label">
            <font>font_info_buttons</font>
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>main_fg_100</textcolor>
            <visible>String.IsEqual(Window().Property(process_started),false)</visible>
            <label>$INFO[Window().Property(notification_text)]</label>
        </control>
    </controls>
</window>