<window type="dialog">
    <defaultcontrol>2</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        
        <!-- Fanart Backdrop -->
        <control type="group">
            <include>Dimensions_Fullscreen</include>
            <control type="image">
                <texture background="true">$INFO[Window().Property(item.art.fanart)]</texture>
            </control>
            <control type="image">
                <texture colordiffuse="main_bg_70">common/bg.jpg</texture>
            </control>
        </control>
        
        <!-- Top Header  -->
        <control type="group">
            
            <!-- Clearlogo -->
            <control type="image" id="1001">
                <centerleft>50%</centerleft>
                <width>248</width>
                <top>-900</top>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window().Property(item.art.clearlogo)]</texture>
                <visible>Skin.HasSetting(EnableClearlogo)</visible>
            </control>
            
            <!-- Fallback Label -->
            <control type="label">
                <centerleft>50%</centerleft>
                <aligny>center</aligny>
                <align>center</align>
                <top>30</top>
                <height>120</height>
                <font>font_byline</font>
                <textcolor>main_fg_70</textcolor>
                <label>$INFO[Window().Property(item.info.title)]</label>
                <visible>!Skin.HasSetting(EnableClearlogo) | String.IsEqual(Window().Property(item.art.clearlogo), None) | String.IsEqual(Window().Property(item.art.clearlogo), )</visible>
            </control>
        </control>

        <!-- Side Info -->
        <control type="group">
            <top>180</top>
            <left>80</left>
            <width>730</width>
            
            <!-- Fanart -->
            <control type="group">
                <control type="image">
                    <width>730</width>
                    <height>423.21</height>
                    <texture background="true" diffuse="diffuse/landscape-info.png">$INFO[Window().Property(item.art.fanart)]</texture>
                </control>
                <control type="image">
                    <top>0</top>
                    <right>50</right>
                    <width>200</width>
                    <height>390</height>
                    <texture background="true">$INFO[Window().Property(item.art.clearlogo)]</texture>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <visible>Skin.HasSetting(EnableClearlogo)</visible>
                </control>
            </control>

            <!-- Metadata -->
            <control type="group">
                <top>60</top>
                
                <!-- Title -->
                <control type="label">
                    <font>font_title_small</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$INFO[Window().Property(item.info.title)]</label>
                </control>
                
                <!-- Episode Info -->
                <control type="label">
                    <top>80</top>
                    <font>font_small</font>
                    <textcolor>main_fg_100</textcolor>
                    <visible>!String.IsEmpty(Window().Property(item.info.season))</visible>
                    <label>$INFO[Window().Property(item.info.mpaa)]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  $INFO[Window().Property(item.info.aired)]</label>
                </control>
                
                <!-- Movie Info -->
                <control type="label">
                    <top>80</top>
                    <font>font_small</font>
                    <textcolor>main_fg_100</textcolor>
                    <visible>String.IsEmpty(Window().Property(item.info.season))</visible>
                    <label>$INFO[Window().Property(item.info.mpaa)]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  $INFO[Window().Property(item.info.year)]</label>
                </control>

                <!-- Plot -->
                <control type="textbox">
                    <wrapmultiline>true</wrapmultiline>
                    <top>510</top>
                    <height min="20" max="200">auto</height>
                    <font>font_plotbox</font>
                    <textcolor>main_fg_70</textcolor>
                    <label>$INFO[Window().Property(item.info.plot)]</label>
                </control>
            </control>
        </control>

        <!-- Scrollbar  -->
        <control type="scrollbar" id="17">
            <top>180</top>
            <right>40</right>
            <width>8</width>
            <height>780</height>
            <visible>true</visible>
            <texturesliderbackground colordiffuse="dialog_fg_12" border="4">common/white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="dialog_fg_30" border="4">scrollbar/scrollv.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="main_fg_100" border="4">scrollbar/scrollv.png</texturesliderbarfocus>
            <animation effect="fade" start="100" end="0" time="400" condition="!Control.HasFocus(17) + !Container.Scrolling">Conditional</animation>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <onleft>1000</onleft>
        </control>

        <!-- Sources List -->
        <control type="list" id="1000">
            <viewtype label="Sources">list</viewtype>
            <left>850</left>
            <top>180</top>
            <width>1010</width>
            <height>780</height>
            <orientation>vertical</orientation>
            <focusposition>1</focusposition>
            <pagecontrol>17</pagecontrol>
            <onright>17</onright>
            
            <!-- Unfocused Items -->
            <itemlayout height="97.5">
                <control type="group">
                    <left>20</left>
                    <right>20</right>
                    <width>1060</width>
                    
                    <!-- Resolution Icon -->
                    <control type="group">
                        <centertop>50%</centertop>
                        <width>72</width>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_fg_100">flags/monochrome/resolution/480.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),SD)</visible>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_fg_100">flags/monochrome/resolution/720.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),720P)</visible>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_fg_100">flags/monochrome/resolution/1080.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),1080P)</visible>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_fg_100">flags/monochrome/resolution/2160.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),4k)</visible>
                        </control>
                    </control>
                    
                    <!-- Stream Label -->
                    <control type="label">
                        <left>92</left>
                        <right>92</right>
                        <aligny>top</aligny>
                        <top>10</top>
                        <font>font_small_bold</font>
                        <textcolor>main_fg_100</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    
                    <!-- Stream Metadata -->
                    <control type="label">
                        <left>92</left>
                        <right>92</right>
                        <top>24</top>
                        <font>font_small_bold</font>
                        <textcolor>main_fg_100</textcolor>
                        <label>$INFO[ListItem.Property(size)]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(type)][/UPPERCASE]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(debrid_provider)][/UPPERCASE]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(provider)][/UPPERCASE]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(info)][/UPPERCASE]</label>
                    </control>
                </control>
            </itemlayout>

            <!-- Focused Item -->
            <focusedlayout height="97.5">
                
                <!-- Highlight Box -->
                <control type="image">
                    <visible>true</visible>
                    <texture colordiffuse="main_fg_100" border="10">diffuse/box.png</texture>
                </control>
                
                <control type="group">
                    <left>20</left>
                    <right>20</right>
                    <width>1060</width>
                    
                    <!-- Resolution Icon -->
                    <control type="group">
                        <centertop>50%</centertop>
                        <width>72</width>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_bg_100">flags/monochrome/resolution/480.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),SD)</visible>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_bg_100">flags/monochrome/resolution/720.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),720P)</visible>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_bg_100">flags/monochrome/resolution/1080.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),1080P)</visible>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <texture colordiffuse="main_bg_100">flags/monochrome/resolution/2160.png</texture>
                            <visible>String.Contains(ListItem.Property(quality),4k)</visible>
                        </control>
                    </control>
                    
                    <!-- Stream Label -->
                    <control type="label">
                        <left>92</left>
                        <right>92</right>
                        <aligny>top</aligny>
                        <top>10</top>
                        <font>font_small_bold</font>
                        <textcolor>main_bg_100</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    
                    <!-- Stream Metadata -->
                    <control type="label">
                        <left>92</left>
                        <right>92</right>
                        <top>24</top>
                        <font>font_small_bold</font>
                        <textcolor>main_bg_100</textcolor>
                        <label>$INFO[ListItem.Property(size)]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(type)][/UPPERCASE]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(debrid_provider)][/UPPERCASE]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(provider)][/UPPERCASE]  [COLOR $VAR[ColorHighlight]]|[/COLOR]  [UPPERCASE]$INFO[ListItem.Property(info)][/UPPERCASE]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>
